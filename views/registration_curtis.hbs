<div class="container">
    <div class="firstRow">
        <div class="row">
            <div class="col-md-6">
                <h1 class="header">knowledge<span id="head">Base</span> </h1>
            </div>
            <div class="col-md-6">
            </div>
        </div>
    </div>
    <div class="SecondRow">
        <div class="row">
            <div class="col-md-6">
                <h1>Lets us know a little more about you</h1>
            </div>
            <div class="col-md-6">
                <div class="registration">
                    <form action="/registration" method="POST" autocomplete="off">
                        <input type="text" class="form-control" id="imageurl" placeholder="imageurl" name="imageurl"
                            required />
                        <br>
                        <textarea class="form-control" id="textbox" name="description"
                            placeholder="a few lines about yourself ..."></textarea>
                        <br>
                        <input type="text" class="form-control" id="country" placeholder="country" name="country"
                            required />
                        <br>
                        <input placeholder="Selected date" name="dob" type="text" id="datepicker" class="form-control datepicker">
                        <br>
                        <input type="hidden" id="name" name="name" value={{userData.name}}>
                        <input type="hidden" id="email" name="email" value={{userData.email}}>
                        <input type="hidden" id="pwd" name="pwd" value={{userData.pwd}}>
                        <button type="submit" class="btn btn-primary btn-block">Register</button>
                    </form>
                </div>

            </div>

        </div>

    </div>